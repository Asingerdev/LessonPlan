<%- include("../partials/nav-2")%>

<div class="banner-image">
</div>
<header class="students-header">
    <h1><%=teacher.name %>'s students</h1>
    <a href="/students/new"><button class="add-student">+ Add Student</button></a>
</header>
<main class="student-content">
    <% for(let i = 0; i < students.length; i++) { %>
    <div class="student-card">
        <div class="img-container">
            <img class="student-img" src="<%=students[i].img%>">
        </div>
        <!-- <p class="instrument"></p> -->
        <p class="student-music"><button
                onclick="window.location.href='/students/<%=students[i]._id%>';"><%=students[i].name%></button></p>
    </div>
    <% } %>
</main>
</body>

</html>