<header>
    <h1><%=student.name%></h1>
    <nav class="student-nav">
        <ul class="inner-nav">
            <li><a href="/students" class="nav-link">Home</a></li>
            <li><a href="/students/<%=student._id%>/edit" class="nav-link">Edit</a></li>
            <li><a href="#" class="nav-link" onclick="document.getElementById('delete-form').style.display='block'"
                    style="width:auto;">Delete</a></li>
            <li><a href="/students/<%=student._id%>/songs" class="nav-link" id="song-tag">Songs</a></li>
        </ul>
    </nav>
</header>
<div id="delete-form" class="modal">
    <form action="/students/<%=student._id%>?_method=DELETE" method="POST" class="modal-content animate">
        <div class="container">
            <h3>Are you sure you want to delete student's profile?</h3>
        </div>
        <div class="container" style="background-color:#f1f1f1">
            <button type="submit" class="delete-button">Delete</button>
            <button type="button" onclick="document.getElementById('delete-form').style.display='none'"
                class="cancel-button">Cancel</button>
        </div>
    </form>
</div>